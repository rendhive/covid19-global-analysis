import pandas as pd
import matplotlib.pyplot as plt
import plotly.express as px

df = pd.read_csv("../data/covid_data.csv")
df['date'] = pd.to_datetime(df['date'])

df.head()

df.groupby('country')[['confirmed','deaths','vaccinated']].max().sort_values(
    by='confirmed', ascending=False
).head(10)

global_daily = df.groupby('date')['confirmed'].sum()

plt.figure()
plt.plot(global_daily)
plt.title("Global COVID-19 Confirmed Cases Over Time")
plt.xlabel("Date")
plt.ylabel("Total Cases")
plt.tight_layout()
plt.show()

latest = df.sort_values('date').groupby('country').last().reset_index()

fig = px.bar(
    latest.sort_values('vaccinated', ascending=False).head(10),
    x='country',
    y='vaccinated',
    title='Top 10 Countries by Vaccination'
)
fig.show()